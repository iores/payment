FROM centos:7
MAINTAINER zhanglinfeng@cufs.com.cn
#设置jenkins 的配置目录
ENV JENKINS_HOME "/home/jenkins"
#copy 文件进入容器中
COPY ./myjenkins /home/myjenkins
#切换工作目录
WORKDIR /home/myjenkins/tomcat
#安装jdk
RUN rpm -ivh /home/myjenkins/jdk-8u162-linux-x64.rpm \
    && chmod 755 -R bin
#容器启动命令
ENTRYPOINT ["bin/catalina.sh", "run"]
#docker run -i  -t -d -p 8001:8080 -v /opt/jenkinsdata/:/home/jenkins/ --restart always  --name jenkins  jenkins:v1
